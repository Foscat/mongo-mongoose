<html>
<!-- ///////////////////////////// Nav bar \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\ -->
<nav>
    {{!-- Wrapper for all of nav bar holding its base size and style --}}
    <div class="nav-wrapper">
        {{!-- Special class helper from materialize to control list --}}
        <ul class="left hide-on-med-and-down">

            <h1 id="nav-title" class="brand-logo center" >Tinfoil Mongoose</h1>

            <li class="active">
                <a href="/">Bunker</a>
            </li>

            <li  class="modal-trigger savedArticles" href="#saveModal">
                <a>Pinned Articles</a>
            </li>

        </ul>

        <ul class="hide-on-med-and-down valign-wrapper right">
            <li>
                <a class="waves-effect halfway-fab waves-effect waves-light hover searchArticle right">Scrape 
                    <i class="material-icons right">add</i>
                </a>
            </li>
        </ul>

        <ul class="left hide-on-large-only">
            <li class="modal-trigger savedArticles" href="#saveModal">
                <a>Pinned Articles</a>
            </li>
            <li>
                <i class="fa fa-newspaper-o material-icons" style="height:auto;" aria-hidden="true"></i>
            </li>
        </ul>

        <ul class="hide-on-large-only valign-wrapper right">

        <li>
            <a class=" waves-effect halfway-fab waves-effect waves-light hover searchArticle right">
                <i class="material-icons">add</i>
            </a>
        </li>

        </ul>
  </div>
</nav>

<!-- ///////////////////////////// Main content \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\ -->
<div class="container">
  <div class="row around">

    {{#each data}}
    
        <div class="col-md-5" id="{{link}}" style="display:inline-block;">

            <div class="card around" style="height:fit-content; width:25rem;">

                <div class="card-image" style="position:relative;">
                    <img height="50%" src="{{image}}">

                    <a class="addArticle btn-floating halfway-fab modal-trigger" style="z-index:101;" 
                        href="/articles/add" 
                        data-title="{{title}} " 
                        data-image="{{image}}" 
                        data-link="{{link}}" 
                        data-summary="{{summary}}"
                        data-category="{{category}}"
                    >
                        <img class="addBtn" src="/images/Button-Add-icon.png">
                    </a>
                </div>

                <span class="card-title" style="font-size:15px; color:rgb(33, 33, 82); text-shadow: 1px">{{title}}</span>

                <div class="card-content">

                    <p>{{summary}}</p>

                    <a href="{{link}}"><p>See full article</p></a>
                
                </div>

               

            </div>
        </div>
    {{/each}}

  </div>
</div>

