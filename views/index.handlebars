<html>
    <div id="wrapper">

      <h1>
        Article scraper with note posts
      </h1>

      {{!-- Box that holds all note making info --}}
      <div class="container center" id="noteMake">

        <form action="/notes/create" method="post">

          <h2>Enter a Note!</h2>

          {{!-- User enters note title here --}}
          <input id="nM-title_input" type="text" name="title" placeholder="Title">

          {{!-- User enters note body here --}}
          <textarea class="row m-1" id="nM-body_input" type="text" name="body" placeholder="Write Note Here"></textarea>

          {{!-- Submit button for note --}}
          <input  id="noteMake-create_button" type="submit">

          {{!-- Links to json info of users and notes --}}
          <a href="/note/json">See your notes!</a>
          <a href="/user">See your profile!</a>
          <a href="/populateduser">See your profile, populated with notes!</a>

        </form>

        <div id="results">
          
        </div>

      </div>

    </div>

      <div class="row around">

        <div class="col-md-4 border border-dark" id="article">

          <h2>All article info goes here</h2>
          <button id="scraper" class="rounded">Scrape away!</button>
          <a href="/scrape"><button type="button">Anchor Scrape</button></a>

          <div id="art-info" class="m-1 border border-info">

           <div class="m-1 border border-info"> 
            {{#each ArticleSchema}}
              {{> articles/article-block}}
            {{/each}}
          </div>

          </div>
          
        </div>

        <div class="col-md-4 border border-dark" id="notePool">
          <h1>All notes here</h1>

            {{#each NoteSchema}}

              <div class="single-note border border-dark mt-3">

                <img class="note-icon" src="images/notes-icon.jpg" height="100px" width="100px">
                <h3 class="noteTitle border-bottom border-dark">{{title}}</h3>
                <p class="noteBody">{{body}}</p>
                <button class="rounded delete-note" data-id="{{_id}}">Delete Note</button>

              </div>

            {{/each}}

        </div>

      </div>

  </div>
</html>