<html>
    <div id="wrapper">

      <h1>
        Article scraper with note posts
      </h1>

      <h2>
        <i>Dont tell me how to live my life.</i>
      </h2>

      {{!-- Box that holds all note making info --}}
      <div id="note-box">

        <form action="/notes/create" method="post">

          <h1>Hi User!</h1>
          <h2>Enter a Note!</h2>

          {{!-- User enters note title here --}}
          <input id="note-title-input" type="text" name="title" placeholder="Title">

          {{!-- User enters note body here --}}
          <textarea id="note-body-input" type="text" name="body" placeholder="Write Note Here"></textarea>

          {{!-- Submit button for note --}}
          {{!-- <a id="create-note" href="/notes/create"><button type="button">Submit Note</button></a> --}}
          <input id="create-note-button" type="submit">

          {{!-- Links to json info of users and notes --}}
          <a href="/note/json">See your notes!</a>
          <a href="/user">See your profile!</a>
          <a href="/populateduser">See your profile, populated with notes!</a>

        </form>

        <div id="results">
          
        </div>

      </div>

    </div>

      <div class="row around">

        <div class="col-md-4 border border-dark" id="articles">
          <h2>All article info goes here</h2>

          <div id="readNotes">
            <h2>read notes</h2>
            {{#each NoteSchema}}
            <h3>{{title}}</h3>
            <p>{{body}}</p>
              {{#if read}}
              {{!-- <button class="change-read boldest rounded" data-id="{{_id}}" data-newread="{{read}}">Been read</button> --}}
                {{> notes/note-block beenRead=true}}
              {{/if}}
              <button class="rounded delete-note" data-id="{{_id}}">Delete Note</button>
            {{/each}}
          </div>
          
        </div>

        <div class="col-md-4 border border-dark" id="notes">
          <h1>All notes here</h1>

          <div id="unreadNotes">
            <h2>unread notes</h2>
            {{#each NoteSchema}}
            
              {{#unless read}}
              <h3>{{title}}</h3>
              <p>{{body}}</p>
              {{!-- <button class="change-read boldest rounded" data-id="{{_id}}" data-newread="{{read}}">Aint read</button> --}}
              <button class="rounded delete-note" data-id="{{_id}}">Delete Note</button>
                {{> notes/note-block beenRead=false}}
              {{/unless}}
              
            {{/each}}
          </div>

        </div>

      </div>

  </div>
</html>